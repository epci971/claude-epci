{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "epci-project-memory-version",
  "title": "EPCI Memory Version",
  "description": "Schema for version tracking and migrations in .project-memory/",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Current schema version (semver)"
    },
    "initialized_at": {
      "type": "string",
      "format": "date-time",
      "description": "When project memory was first initialized"
    },
    "last_migration": {
      "type": "string",
      "format": "date-time",
      "description": "When last migration was applied"
    },
    "migrations_applied": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "to_version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "applied_at": {
            "type": "string",
            "format": "date-time"
          },
          "success": {
            "type": "boolean"
          }
        },
        "required": ["from_version", "to_version", "applied_at", "success"]
      },
      "description": "History of applied migrations"
    },
    "epci_plugin_version": {
      "type": "string",
      "description": "EPCI plugin version that created/migrated this"
    }
  },
  "required": ["schema_version", "initialized_at", "epci_plugin_version"]
}
