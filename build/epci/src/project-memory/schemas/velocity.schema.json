{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "epci-project-memory-velocity",
  "title": "EPCI Velocity Metrics",
  "description": "Schema for velocity metrics stored in .project-memory/metrics/velocity.json",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_features": {
          "type": "integer",
          "minimum": 0,
          "description": "Total features completed"
        },
        "avg_time_tiny": {
          "type": "string",
          "description": "Average time for TINY features"
        },
        "avg_time_small": {
          "type": "string",
          "description": "Average time for SMALL features"
        },
        "avg_time_standard": {
          "type": "string",
          "description": "Average time for STANDARD features"
        },
        "avg_time_large": {
          "type": "string",
          "description": "Average time for LARGE features"
        },
        "estimation_accuracy": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "How accurate are time estimates (0-1)"
        }
      }
    },
    "by_complexity": {
      "type": "object",
      "properties": {
        "TINY": {
          "$ref": "#/definitions/complexity_stats"
        },
        "SMALL": {
          "$ref": "#/definitions/complexity_stats"
        },
        "STANDARD": {
          "$ref": "#/definitions/complexity_stats"
        },
        "LARGE": {
          "$ref": "#/definitions/complexity_stats"
        }
      }
    },
    "trend": {
      "type": "object",
      "properties": {
        "last_5_features": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "properties": {
              "slug": { "type": "string" },
              "complexity": { "type": "string" },
              "estimated": { "type": "string" },
              "actual": { "type": "string" },
              "accuracy": { "type": "number" }
            }
          }
        },
        "velocity_trend": {
          "type": "string",
          "enum": ["improving", "stable", "declining"],
          "description": "Overall velocity trend"
        }
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "complexity_stats": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 0
        },
        "avg_time": {
          "type": "string"
        },
        "avg_files": {
          "type": "number"
        },
        "avg_loc": {
          "type": "number"
        }
      }
    }
  },
  "required": ["version", "summary"]
}
